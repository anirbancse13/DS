https://practice.geeksforgeeks.org/problems/add-two-numbers-represented-by-linked-lists/1
Add two numbers represented by linked lists

class Solution{
    //Function to add two numbers represented by linked list.
    static Node addTwoLists(Node first, Node second){

        // Step 1 - reverse the two list
        first = reverse(first);
        second = reverse(second);

        // Step 2 - add the lists
        Node ans = add(first, second);

        // Step 3 - reverse the ans
        ans = reverse(ans);

        return ans;
    }

    static Node reverse(Node head){
        Node curr = head;
        Node prev = null;
        Node forward = null;

        while(curr != null){
            forward = curr.next;
            curr.next = prev;
            prev = curr;
            curr = forward;
        }
        return prev;
    }

    static Node add(Node first, Node second){
        Node head = null;
        Node tail = null;
        int carry = 0;

        while( first != null || second != null || carry !=0 ){
            int val1 = 0;
            if( first!= null ){
                val1=first.data;
            }

            int val2 = 0;
            if( second!= null ){
                val2=second.data;
            }

            int sum = carry + val1 + val2;
            int digit = sum%10;

            if ( head == null){
                head = new Node(digit);
                tail = head;
            }else{
                Node temp = new Node(digit);
                tail.next = temp;
                tail = temp;
            }

            carry = sum/10;

            if(first != null)
                first = first.next;
            if (second != null)
                second = second.next;
        }
        return head;
    }
}