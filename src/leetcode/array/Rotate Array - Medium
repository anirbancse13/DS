https://leetcode.com/problems/rotate-array/submissions/
189. Rotate Array
/* Step1: Handle edge condition
                    - k = 0
                    - nums.length <=1
                    - k > length
            Step2: Reverse start - length-k-1
            Step3: Reverse length-k - length-1
            Step4: Reverse whole array
*/


class Solution {
    public void rotate(int[] nums, int k) {
        if (k==0) return;

        int length = nums.length;
        if(length <=1) return;

        k=k%length;

        //Reverse 0 to (length-k-1)
        int i=0;
        int j = length-k-1;
        while(i<j){
            int temp = nums[i];
            nums[i] = nums[j];
            nums[j] = temp;
            i++;
            j--;
       }

        //Reverse (length-k) to (length-1)
        i=length-k;
        j = length-1;
        while(i<j){
            int temp = nums[i];
            nums[i] = nums[j];
            nums[j] = temp;
            i++;
            j--;
       }

        //Reverse the whole array
        i=0;
        j = length-1;
        while(i<j){
            int temp = nums[i];
            nums[i] = nums[j];
            nums[j] = temp;
            i++;
            j--;
       }
    }
}