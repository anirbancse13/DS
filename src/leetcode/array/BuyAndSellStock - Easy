class Solution {
    public int maxProfit(int[] prices) {
        //Let i be the fast pointer and j be the slow pointer
        int i =0;
        int j =i;
        int maxProfit = 0;

        //i to iterate till the end of the array
        while ( i<prices.length){
            int profit = 0;
            //If the difference between the prices are negetive, bring the slow pointer to the position of the first pointer.
            if ( prices[i]-prices[j] <= 0){
                j=i;
            }else{
                profit = prices[i]-prices[j];
            }
            //Comapring current iteration profit with max profit
            maxProfit = Math.max(maxProfit,profit);
            i++;
        }
       return maxProfit;
    }
}